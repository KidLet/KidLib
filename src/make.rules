#INCLUDE+= -I$(CPP_INCLUDE)/tr1

%.d: %.cpp
		@echo -n $< | sed s/\.cpp/\.o:/ > $@; \
		$(CC) $(INCLUDE) -MM $< | sed '1s/.*.://' >> $@;

%.o: %.cpp
		$(CXX) $(CFLAGS) $(INCLUDE) -o $@ -c $<


%.o: %.c
		$(CC) $(CFLAGS) $(INCLUDE) -o $@ -c $<
